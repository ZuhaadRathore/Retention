{
  "productName": "Retention",
  "version": "0.1.0",
  "identifier": "com.retention.app",
  "build": {
    "beforeDevCommand": "pnpm web:dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm web:build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/retention-sidecar"
    ],
    "resources": [
      "binaries/_internal/*"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Retention",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "devCsp": null
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/{{owner}}/{{repo}}/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlEREFDMUM2REYzNDkwNUIKUldSYmtEVGZ4c0hhbmZocFR4eXlTeE4yNk52T0VZZWIzK1JpWlpkdTROUXdXbm9CbG5mZUZiZHAK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
