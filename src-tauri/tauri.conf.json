{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "pnpm web:dev",
    "beforeBuildCommand": "pnpm web:build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Retention",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "sidecar": false,
        "open": true
      },
      "http": {
        "request": true,
        "scope": [
          "http://localhost:8000/*",
          "http://127.0.0.1:8000/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.retention.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "en-US"
        }
      },
      "macOS": {
        "minimumSystemVersion": "10.13",
        "entitlements": null,
        "exceptionDomain": null
      },
      "deb": {
        "depends": []
      }
    },
    "windows": [
      {
        "label": "main",
        "title": "Retention",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "about:blank",
          "windows": ["main"],
          "enableTauriAPI": true
        },
        {
          "domain": "localhost:1420",
          "windows": ["main"],
          "enableTauriAPI": true
        }
      ]
    }
  }
}
